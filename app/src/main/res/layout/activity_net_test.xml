<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="15dp"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <Button
            android:id="@+id/normal_request"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:text="Normal Request"/>

        <Button
            android:id="@+id/first_cache_request"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:text="First Cache Request"/>

        <Button
            android:id="@+id/first_remote_request"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:text="First Remote Request"/>

        <Button
            android:id="@+id/only_cache_request"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:text="Only Cache Request"/>

        <Button
            android:id="@+id/only_remote_request"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:text="Only Remote Request"/>

        <Button
            android:id="@+id/cache_and_remote_request"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:text="Cache And Remote Request"/>

        <Button
            android:id="@+id/clear_cache"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:text="Clear Cache"/>

        <TextView
            android:id="@+id/show_response_data"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="15dp"/>
    </LinearLayout>
</ScrollView>